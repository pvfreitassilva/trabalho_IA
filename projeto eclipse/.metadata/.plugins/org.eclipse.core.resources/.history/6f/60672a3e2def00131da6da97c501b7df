import java.util.InputMismatchException;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		int rainhas=0;
		int opcao;
		Scanner entrada = new Scanner(System.in);
		do{		
			System.out.println("Informe o número de rainhas (mínimo 4):");
			try{
			rainhas = entrada.nextInt();
			}
			catch(InputMismatchException e){
				System.out.println("O valor informado não é um número válido.");
				e=null;
			}
			if(rainhas<4)
				System.out.println("O número de rainhas não pode ser menor que 4.");
		}
		while(rainhas<4);
		do{
			System.out.println("Informe o algoritmo debusca desejado:");
			System.out.println("1. Backtracking");
			System.out.println("2. Busca em largura");
			System.out.println("3. Busca em profundidade");
			System.out.println("4. Busca ordenada");
			System.out.println("5. Busca gulosa");
			System.out.println("6. Busca A*");
			System.out.println("7. Busca IDA*");
			opcao = entrada.nextInt();
			if(opcao<1 || opcao>7)
				System.out.println("Opção inválida.");			
		}
		while(opcao<1 || opcao>7);
		Tabuleiro tabuleiro = new Tabuleiro(rainhas);
		tabuleiro.distribuiRainhas();
		tabuleiro.imprimeTabuleiro();
	}
}
